<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Relatório</title>
    <%- include("../partials/header.ejs") %>
    <link rel="stylesheet" href="/css/bootstrap.css">
</head>

<body>
    
    <div class="container">
    

        <table class="table">
            
            <h1 style="font-size:30px;text-align:center;">Relatório de Livros</h1>

            <tr>
                <th>Código</th>
                <th>Nome</th>
                <th>Preço</th>
            </tr>

            <% for(let livro of listaLivros) {  %>
                <tr>
                    <td>
                        <%= livro.codigo%>
                    </td>
                    <td>
                        <%= livro.nome%>
                    </td>
                    <td>
                        <%= livro.preco%>
                    </td>
                </tr>

            <% } %>

         
        </table>
    </div>

</body>

<foot>
    <%- include("../partials/footer.ejs") %>
</foot>


</html>